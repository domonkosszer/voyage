---
import Base from "../layouts/Base.astro"
---
<Base title="RunClub">
  <section
    class="relative min-h-screen bg-fixed bg-cover bg-center text-white flex items-center"
    style="background-image: url('/hero.jpg');"
  >
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="relative z-10 mx-auto max-w-6xl px-4">
      <h1 class="text-5xl md:text-6xl font-extrabold leading-tight mb-4">
        Voyage.<span class="text-blue-400"> Go further.</span>
      </h1>
      <p class="max-w-lg text-lg text-gray-100 mb-8">
      From start to summit - the voyage never ends.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/events" class="px-6 py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium">
          See upcoming runs
        </a>
        <a href="/about" class="px-6 py-3 rounded-lg border border-white/60 hover:bg-white/10 text-white font-medium">
          Learn more
        </a>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-16 bg-white text-gray-900">
    <h2 class="text-2xl font-bold mb-4">Upcoming Events</h2>
    <p>… your event cards here …</p>
  </section>
</Base>
